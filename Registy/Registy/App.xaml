<Application x:Class="Registy.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Registy"
             StartupUri="MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ComponentStyles.xaml"/>
                <ResourceDictionary Source="Styles/Geometries.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <FontFamily x:Key="ComfortaaBold">pack://application:,,,/Fonts/#Comfortaa Bold</FontFamily>
            <FontFamily x:Key="ComfortaaLight">pack://application:,,,/Fonts/#Comfortaa Light</FontFamily>
            <FontFamily x:Key="ComfortaaMedium">pack://application:,,,/Fonts/#Comfortaa Medium</FontFamily>
            <FontFamily x:Key="ComfortaaRegular">pack://application:,,,/Fonts/#Comfortaa Regular</FontFamily>
            <FontFamily x:Key="ComfortaaSemiBold">pack://application:,,,/Fonts/#Comfortaa Semi Bold</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
